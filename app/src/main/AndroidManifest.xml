<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.johannes.speakforme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.johannes.speakforme.MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.johannes.speakforme.SettingsActivity">
        <intent-filer>
            <action android:name=".SettingsActivity" />
            <category android:name="android.intent.category.PREFERENCES" />
        </intent-filer>
    </activity>
    </application>

</manifest>